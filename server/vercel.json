{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js"
      }, 
      {
        "src": "/public/uploads/authors/(.*)",
        "dest": "public/uploads/authors/$1"
      },
      {
        "src": "/public/uploads/covers/(.*)",
        "dest": "public/uploads/covers/$1"
      }
    ]
  }